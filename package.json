{
  "name": "electron-boilerplate",
  "productName": "Electron Boilerplate",
  "author": "Jane Doe",
  "version": "1.0.0",
  "description": "Minimal and modern Electron boilerplate with Vite, React, and TypeScript",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "npm run rebuild && npm exec electron-forge package",
    "make": "npm run rebuild && npm exec electron-forge make",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "publish": "electron-forge publish",
    "lint": "npm run eslint && npm run typecheck",
    "eslint": "eslint",
    "typecheck": "tsc --noEmit --project tsconfig.app.json && tsc --noEmit --project tsconfig.node.json",
    "test": "vitest"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.7.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@hono/node-server": "^1.14.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.8",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/vite-react": "^6.3.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "electron": "^34.0.2",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.14.0",
    "hono": "^4.7.11",
    "lucide-react": "^0.511.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.0.0",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.3.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "electron-squirrel-startup": "^1.0.1",
    "vite-plugin-native": "^2.2.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.21.3"
  },
  "engines": {
    "node": ">=22"
  }
}
